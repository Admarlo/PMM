<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.adrlop.spinnerobjetomusica.MainActivity">

    <TextView
        android:id="@+id/EtiquetaSaludo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pulse para abrir el Spinner"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.224" />

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:layout_below="@+id/EtiquetaSaludo"
        android:layout_alignLeft="@+id/EtiquetaSaludo"
        android:layout_alignStart="@+id/EtiquetaSaludo"
        tools:layout_editor_absoluteY="162dp"
        tools:layout_editor_absoluteX="117dp" />

</android.support.constraint.ConstraintLayout>
